                                        </Rectangle>
                                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource ButtonTextBlockStyle}">
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Text" Value="D-"/>
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding GoodsList[7].Deadline}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource ButtonTextBlockStyle}">
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Text" Value="{Binding GoodsList[7].Dday}"/>
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding GoodsList[7].Deadline}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </WrapPanel>
                                    </Grid>
                                </Grid>
                                <WrapPanel Margin="0,0,0,10" Height="20">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextBlockStyle}">
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Width" Value="100"/>
                                                <Setter Property="Text" Value="{x:Static sr:Resource.GoodsCurrentPrice}"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextBlockStyle}">
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Width" Value="10"/>
                                                <Setter Property="Text" Value="{x:Static sr:Resource.Separator}"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource NormalTextBlockStyle}">
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Text" Value="{Binding GoodsList[7].CurrentPrice, Mode=TwoWay}"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </WrapPanel>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Grid>
                <ListView Grid.Row="2" Margin="0,10,0,0" Style="{StaticResource ListViewHorizontalStyle}" ItemsSource="{Binding PageIndexList}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource GridViewItemHorizontalStyle}"/>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewCollapsedColumnHeaderStyle}">
                            <GridViewColumn Width="35">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <RadioButton Content="{Binding PageSeq}" Command="{Binding DataContext.PagePopupCommand, ElementName=goods}" CommandParameter="{Binding PageSeq}">
                                            <RadioButton.Style>
                                                <Style TargetType="RadioButton">
                                                    <Setter Property="Template" Value="{DynamicResource PageIndexRadioBtn}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked}" Value="true">
                                                            <Setter Property="Template" Value="{DynamicResource PageIndexRadioBtnOver}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </RadioButton.Style>
                                        </RadioButton>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </ext:BusyIndicator>
</UserControl>
